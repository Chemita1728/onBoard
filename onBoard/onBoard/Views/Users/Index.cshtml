@model PaginatedList<onBoard.Models.HourSQL>

@{
    ViewData["Title"] = "Horas";
}

<h1>Horas Registradas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Hours
            </th>
            <th>
                Minutes
            </th>
            <th>
                Seconds
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Minutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Seconds)
            </td>
        </tr>
    }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>