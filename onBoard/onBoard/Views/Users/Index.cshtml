@model IEnumerable<onBoard.Models.Hour>

@{
    ViewData["Title"] = "Horas";
}

<h1>Horas Registradas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Hours
            </th>
            <th>
                Minutes
            </th>
            <th>
                Seconds
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Minutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourPressed.Seconds)
            </td>
        </tr>
    }
    </tbody>
</table>